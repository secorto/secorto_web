---
interface Props {
	tags: string[],
  route: string
}
const { tags, route } = Astro.props;
---

<div class="tags">
  {tags.map((tag) => (
    <a href={`${route}${tag}`}><p class="tag">{tag}</p></a>
  ))}
</div>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tags a {
    text-decoration: none;
  }

  .tag {
    margin: 0.5rem;
    border: dotted 2px var(--colors-primary);
    border-radius: .5em;
    padding: .5rem 1rem;
    font-size: 1.15em;
  }

  .tag:hover {
    border: dotted 2px var(--colors-hover);
  }
</style>
