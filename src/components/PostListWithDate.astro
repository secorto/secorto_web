---
import { dateFormat } from 'src/scripts/dateFormat';
import PostList, {type Props as importedProps} from '@components/PostList.astro';
import PostDate from '@components/PostDate.astro';

type Props = importedProps
const { posts, basePath } = Astro.props;

---
<PostList posts={posts} basePath={basePath}>
  {(post: any) => (
    <PostDate>
      {dateFormat.format(post.data.date)}
    </PostDate>
  )}
</PostList>
