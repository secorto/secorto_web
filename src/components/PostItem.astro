---
import { Image } from "astro:assets";
interface Props {
    title: string
  url: string
  image?: ImageMetadata
  translation_status?: string
  translation_note?: string
}
const { title, url, image, translation_status, translation_note } = Astro.props
---

<a class="card" href={url}>
  <span class="card-content">
    {image &&
      <Image src={image} alt="featured image" />
    }
    <h2 class="card-title">{title}</h2>
    {translation_status && (
      <div class="card-badge">
        <abbr title={translation_note ?? (translation_status === 'draft' ? 'Draft translation' : 'Not translated')}>{translation_status === 'draft' ? 'Draft' : 'Not translated'}</abbr>
      </div>
    )}
    <div class="card-details">
      <slot/>
    </div>
  </span>
</a>
<style>
  .card {
    box-sizing: border-box;
    min-width: 0px;
    box-shadow: 0 0 8px var(--colors-primary);
    margin: 0px 0px 1.5rem;
    border-radius: 10px;
    text-decoration: none;
    transition: box-shadow 0.3s ease-out 0.1s, transform 0.3s ease-out, opacity 0.2s ease-out;
    flex: 0 1 100%;
    padding: 1rem;
    background: var(--colors-background);
  }
  .card:hover {
    transform: translate(0px, -4px);
    box-shadow: 0 2px 14px var(--colors-hover);
  }
  .card-content {
    box-sizing: border-box;
    margin: 0px;
    min-width: 0px;
    color: var(--colors-primary);
  }
  .card-title {
    margin: 0;
  }
  .card-details {
    color: var(--colors-text);
  }
</style>
