---
const { title, url, excerpt, date } = Astro.props
---

<a class="card" href={url}>
  <span class="card-content">
    <h2 class="card-title">{title}</h2>
    <div class="card-details">
      {date &&
        <div class="post-date">
          <small>
            <svg viewBox="0 0 24 24" height="16" width="16" focusable="false" role="img" fill="currentColor" xmlns="http://www.w3.org/2000/svg" class="css-1hg08za ex0cdmw0"><title>Fecha</title><path fill="none" d="M0 0h24v24H0V0z"></path><path d="M20 3h-1V1h-2v2H7V1H5v2H4c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 2v3H4V5h16zM4 21V10h16v11H4z"></path><path d="M4 5.01h16V8H4z" opacity="0.3"></path></svg>
            {date}
        </small>
        </div>
      }
      <p class="css-1yhrlyl">{excerpt}</p>
    </div>
  </span>
</a>
<style>
  .card {
    box-sizing: border-box;
    min-width: 0px;
    box-shadow: 0 0 8px var(--colors-primary);
    margin: 0px 0px 1.5rem;
    border-radius: 10px;
    text-decoration: none;
    transition: box-shadow 0.3s ease-out 0.1s, transform 0.3s ease-out, opacity 0.2s ease-out;
    flex: 0 1 100%;
    padding: 1rem;
    background: var(--colors-background);
  }
  .card:hover {
    transform: translate(0px, -4px);
    box-shadow: 0 2px 14px var(--colors-hover);
  }
  .card-content {
    box-sizing: border-box;
    margin: 0px;
    min-width: 0px;
    color: var(--colors-primary);
  }
  .card-title {
    margin: 0;
  }
  .card-details {
    color: var(--colors-text);
  }
</style>
