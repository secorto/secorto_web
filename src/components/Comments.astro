<div class="comments"></div>
<script>
  function initGiscus() {
    // Get the div that will contain the comments.
    const commentsDiv = document.querySelector(".comments");
    if (!commentsDiv) return;
    const script = document.createElement("script");
    script.src = "https://giscus.app/client.js";
    // Set the various settings as data attributes on the script tag.
    script.setAttribute("data-repo", "secorto/secorto_web");
    script.setAttribute("data-repo-id", "R_kgDOMOMfNA");
    script.setAttribute("data-category", "Announcements");
    script.setAttribute("data-category-id", "DIC_kwDOMOMfNM4Cg79f");
    script.setAttribute("data-mapping", "pathname");
    script.setAttribute("data-strict", "0");
    script.setAttribute("data-reactions-enabled", "1");
    script.setAttribute("data-emit-metadata", "0");
    script.setAttribute("data-lang", "es");
    script.setAttribute("crossorigin", "anonymous");
    const theme: string = (() => {
      if (
        typeof localStorage !== "undefined" &&
        localStorage.getItem("theme")
      ) {
        return localStorage.getItem("theme") as string;
      }
      if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
        return "dark";
      }
      return "light";
    })();
    script.setAttribute("data-theme", theme);
    commentsDiv.appendChild(script);
  }
  initGiscus();
</script>
