---
import { render } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';
import Tags from '@components/Tags.astro';
import { englishFull as dateFormat } from '@i18n/dateFormat';
import Comments from '@components/Comments.astro';
import { type EntriesStaticPaths, getEntriesPaths } from 'src/utils/paths';
import { Image } from "astro:assets";

export async function getStaticPaths(): EntriesStaticPaths<'blog'>  {
  return getEntriesPaths('blog')
};

const { locale } = Astro.params
const { entry } = Astro.props;
const { Content } = await render(entry);

---
<BaseLayout pageTitle={entry.data.title}>
  <Tags route=`/${locale}/blog/tags/`` tags={entry.data.tags} />
  <p>{dateFormat.format(entry.data.date)}</p>
  {entry.data.image &&
    <Image src={entry.data.image} alt="Featured image" />
  }
  <Content />

  <Comments />
</BaseLayout>
