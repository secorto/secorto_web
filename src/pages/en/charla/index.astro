---
import BaseLayout from '@layouts/BaseLayout.astro'
import ListPost from '@components/ListPost.astro';
import Tags from '@components/Tags.astro';
import { getPostsByLocale } from '@utils/paths';

const allPosts = (await getPostsByLocale('talk', 'en'));
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
const pageTitle = "Talks";
---
<BaseLayout pageTitle={pageTitle}>
  <Tags route="/en/charla/tags/" tags={tags} />
  <ListPost posts={allPosts} basePath='en/charla' />
</BaseLayout>
