---
import BaseLayout from '@layouts/BaseLayout.astro'
import { getCollection } from 'astro:content';
import Tags from '@components/Tags.astro';
import ListPost from '@components/ListPost.astro';
import { getPostsByLocale, getUniqueTags } from '@utils/paths';

const allPosts = await getPostsByLocale('blog', 'en');
const tags = getUniqueTags(allPosts);
const pageTitle = "Blog";
---
<BaseLayout pageTitle={pageTitle}>
  <Tags route="/en/blog/tags/" tags={tags} />
  <ListPost posts={allPosts} basePath='en/blog' />
</BaseLayout>
