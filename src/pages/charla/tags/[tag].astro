---
import BaseLayout from '@layouts/BaseLayout.astro';
import BlogPost from '@components/BlogPost.astro';
import { getCollection } from 'astro:content';
import { dateFormat } from 'src/scripts/dateFormat';

export async function getStaticPaths() {
  const allPosts = (await getCollection('talk')).reverse();

  const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.data.tags.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---
<BaseLayout pageTitle={tag}>
  <p>Charlas etiquetadas con {tag}</p>
  <div class="post-list">
    {posts.map((post) => <BlogPost url={`/charla/${post.slug}`} title={post.data.title} date={dateFormat.format(post.data.date)} />)}
  </div>
</BaseLayout>
