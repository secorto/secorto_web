---
import BaseLayout from '@layouts/BaseLayout.astro'
import Tags from '@components/Tags.astro';
import ListPost from '@components/ListPost.astro';
import { getPostsByLocale, getUniqueTags } from '@utils/paths';

const allPosts = await getPostsByLocale('blog', 'es');
const tags = getUniqueTags(allPosts);
const pageTitle = "Blog";
---
<BaseLayout pageTitle={pageTitle}>
  <Tags route="/es/blog/tags/" tags={tags} />
  <ListPost posts={allPosts} basePath='es/blog' />
</BaseLayout>
