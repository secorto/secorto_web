---
import BaseLayout from '@layouts/BaseLayout.astro'
import Tags from '@components/Tags.astro';
import ListPost from '@components/ListPost.astro';
import { getPostsByLocale } from '@utils/paths';

const allPosts = (await getPostsByLocale('talk', 'es'));
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())].sort((a, b)=> a.localeCompare(b));
const pageTitle = "Charlas";
---
<BaseLayout pageTitle={pageTitle}>
  <Tags route="/es/charla/tags/" tags={tags} />
  <ListPost posts={allPosts} basePath='es/charla' />
</BaseLayout>
